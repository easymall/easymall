<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="easymall" targetRuntime="MyBatis3">
        <plugin type="com.zhu8fei.framework.mybatis.generator.MybatisTempletPlugin"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/easymall"
                        userId="root" password=""/>

        <javaModelGenerator targetPackage="com.zhu8fei.mybatis.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.zhu8fei.mybatis.xml" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.zhu8fei.mybatis.model.mapper"
                             targetProject="src/main/src">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>


        <table schema="easymall" tableName="%" enableSelectByExample="false" enableDeleteByExample="false"
               enableCountByExample="false" enableUpdateByExample="false"
               selectByExampleQueryId="false">
            <property name="rootClass" value="com.zhu8fei.framework.core.db.model.base.BaseEntity"/>
        </table>

        <!--<table schema="easymall" tableName="u_user" domainObjectName="User">-->
        <!--<property name="rootClass" value="com.zhu8fei.framework.core.db.model.base.BaseEntity" />-->
        <!--</table>-->

    </context>
</generatorConfiguration>