<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoder 默认配置为PatternLayoutEncoder -->
        <encoder>
            <!--<pattern>[%-5level] [%d{MM-dd HH:mm:ss.SSS}] [%thread] [%-22X{Trace}] [%logger{36}:%L] - %msg%n</pattern> -->
            <pattern>[%clr(%d{MM-dd HH:mm:ss.SSS}){yellow}] [%clr(%-5level){faint}] [%clr(%-15.15thread){magenta}] [%clr(%-22.22X{Trace}){blue}] [%clr(%-42.42logger{42}:%-4.4L){green}] : %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="ROOT" level="debug" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.springframework" level="error" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <root>
        <level value="debug"/>
        <appender-ref ref="console"/>
    </root>


</configuration>